<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <ImageView
        android:id="@+id/appBarImageView"
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/appbar_image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#10000000"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:id="@+id/personalServicesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarImageView"
        android:background="@drawable/border"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/personalTextView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/salonLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="101dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/salonImageView"
                            android:layout_width="63dp"
                            android:layout_height="59dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/salon_icon" />

                        <TextView
                            android:id="@+id/salontitleTextView"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/salonImageView"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Salon"
                            android:textSize="20dp"
                            app:fontFamily="@font/lato_bold" />

                        <TextView
                            android:id="@+id/salonLocationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/salontitleTextView"
                            android:fontFamily="@font/lato_lightitalic"
                            android:gravity="center"
                            android:text="Services"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/barberLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="101dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/barberImageView"
                            android:layout_width="63dp"
                            android:layout_height="59dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/barber_icon" />

                        <TextView
                            android:id="@+id/barbertitleTextView"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/barberImageView"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Barber"
                            android:textSize="20dp"
                            app:fontFamily="@font/lato_bold" />

                        <TextView
                            android:id="@+id/barberLocationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/barbertitleTextView"
                            android:fontFamily="@font/lato_lightitalic"
                            android:gravity="center"
                            android:text="Services"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/personalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="My Services"
            android:textColor="@color/colorTextLight"
            android:textSize="15sp"
            app:fontFamily="@font/lato_light" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/homeServicesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/homeTextView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cleanLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="121dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/cleanImageView"
                            android:layout_width="53dp"
                            android:layout_height="49dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/clean_icon" />

                        <TextView
                            android:id="@+id/cleantitleTextView"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cleanImageView"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Cleaning"
                            android:textSize="16dp"
                            app:fontFamily="@font/lato_bold" />

                        <TextView
                            android:id="@+id/cleanLocationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/cleantitleTextView"
                            android:fontFamily="@font/lato_lightitalic"
                            android:gravity="center"
                            android:text="Home Services"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/electricalLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="121dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/electricalImageView"
                            android:layout_width="53dp"
                            android:layout_height="49dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/electrical_icon" />

                        <TextView
                            android:id="@+id/electricaltitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/electricalImageView"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Electrical"
                            android:textSize="16dp"
                            app:fontFamily="@font/lato_bold" />

                        <TextView
                            android:id="@+id/electricalLocationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/electricaltitleTextView"
                            android:fontFamily="@font/lato_lightitalic"
                            android:gravity="center"
                            android:text="Home Services"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plumbingLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="121dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/plumbingImageView"
                            android:layout_width="53dp"
                            android:layout_height="49dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/plumbing_icon" />

                        <TextView
                            android:id="@+id/plumbingtitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/plumbingImageView"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Plumbing"
                            android:textSize="16dp"
                            app:fontFamily="@font/lato_bold" />

                        <TextView
                            android:id="@+id/plumbingLocationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/plumbingtitleTextView"
                            android:fontFamily="@font/lato_lightitalic"
                            android:gravity="center"
                            android:text="Home Services"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pestLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="121dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/pestImageView"
                            android:layout_width="53dp"
                            android:layout_height="49dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/pest_icon" />

                        <TextView
                            android:id="@+id/pesttitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pestImageView"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Furmigation"
                            android:textSize="16dp"
                            app:fontFamily="@font/lato_bold" />

                        <TextView
                            android:id="@+id/pestLocationTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/pesttitleTextView"
                            android:fontFamily="@font/lato_lightitalic"
                            android:gravity="center"
                            android:text="Home Services"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/homeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="Home Services"
            android:textColor="@color/colorTextLight"
            android:textSize="15sp"
            app:fontFamily="@font/lato_light" />

    </RelativeLayout>


</RelativeLayout>