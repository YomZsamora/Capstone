<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ui.AdminHomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolBarStyle" />

    <RelativeLayout
        android:id="@+id/terminateEmployeeLayout"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_light_background"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departmentsLayout">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_terminate" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView5"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="TERMINATE EMPLOYEE"
            android:textColor="@color/ColorPrimaryDarkest"
            app:fontFamily="@font/lato_bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@+id/imageView5"
            android:paddingLeft="10dp"
            android:text="You can terminate an employees contract here. Note that terminating an employee's contract won't remove him /  her from the system.   "
            android:textColor="@color/ColorPrimaryDarkest"
            app:fontFamily="@font/lato_light" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addEmployeeLayout"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micasasAdminTextView">

        <ImageView
            android:id="@+id/addEmployeeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/icon_plus" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addEmployeeImageView"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="ADD EMPLOYEE"
            android:textColor="@color/ColorPrimaryDarkest"
            app:fontFamily="@font/lato_light" />
    </RelativeLayout>

    <TextView
        android:id="@+id/micasasAdminTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="3dp"
        android:text="Micasa Admin"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@color/ColorPrimaryDarkest"
        android:textSize="30sp"
        app:fontFamily="@font/lato_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/departmentsLayout"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micasasAdminTextView">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/icon_dept" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="DEPARTMENT"
            android:textColor="@color/ColorPrimaryDarkest"
            app:fontFamily="@font/lato_light" />
    </RelativeLayout>

    <Button
        android:id="@+id/viewEmployeesButton"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout_border_noradius"
        android:text="View All Employees"
        android:textColor="@color/ColorPrimaryDarkest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminateEmployeeLayout" />
</android.support.constraint.ConstraintLayout>